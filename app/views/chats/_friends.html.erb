  <div class="col-12 col-md-3">
    <div class="mb-3">
      <%= link_to new_friend_path, class: "btn btn-primary" do %>
        Make a new Friend
      <% end %>
    </div>

   <div>
     <ul class="list-group">

     <% if @friends_user_id.present? %>

         <% @friends_user_id.each do |friend| %>
           <a href="<%= show_chat_path(username: @f_name_map[friend])%>" class="online_users_link" style="text-decoration: none;color: black">

           <li class="list-group-item d-flex justify-content-between align-items-center">
             <div class="col-auto text-center">
               <img src="https://ptetutorials.com/images/user-profile.png" class="avatar" alt="">
             </div>
             <%= @f_name_map[friend] %>
             <span class="badge badge-<%= (@online_users.include?(friend))? "success" :"light" %>" id="status_<%= friend %>"><%= (@online_users.include?(friend))? "Online" :"Offline" %></span>

           </li>
           </a>
         <% end %>

     <% else %>
       <div class="text-muted">
         You don't have any friends. Click on "Make a new Friend" and start a chat.
       </div>
     <% end %>
     </ul>
   </div>

</div>
