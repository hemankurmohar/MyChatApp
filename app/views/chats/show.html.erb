
<h1>
  <%= @username %>
</h1>

<div class="row">

    <%= render partial: 'friends' %>


    <div class="col">
      <div class="box">
        <div class="chat" data-channel-subscribe="friend" data-friend-id="<%= @friend_id %>">
          <% @messages.each do |message| %>
            <div class="chat-message-container">
              <div class="row no-gutters">
                <div class="col-auto text-center">
                  <img src="<%#= gravatar_url(room_message.user) %>" class="avatar" alt="">
                </div>

                <div class="col">
                  <div class="<%= (message.user_id == current_user.id) ? "message-content1" : "message-content" %>">
                    <p class="mb-1">
                      <%= message.message %>
                    </p>

                    <div class="text-right">
                      <small>
                        <%= message.created_at %>
                      </small>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

        </div>
        <%= form_for @message, remote: true do |form| %>
          <div class="input-group mb-3" style="width:490px">
            <div class="input-group-append">
            <p class="emoji-picker-container" style="width: 80vh">
              <%= form.text_field :message,

                                  input_html: {
                                      class: 'chat-input'
                                  }, data: {emojiable: true} %>


            </p>
              &nbsp;&nbsp;
              <%= form.submit "Send", class: 'btn btn-primary btn-xs chat-input' %>
              &nbsp;&nbsp;
              <%= form.submit "Send", class: 'btn btn-primary btn-xs chat-input' %>
            </div>
          </div>

          <%= form.hidden_field :friend_id, :value => @friend_id %>
        <% end %>
      </div>


    </div>



  </div>
<div class="d-none" data-role="message-template">
  <div class="chat-message-container">
    <div class="row no-gutters">
      <div class="col-auto text-center">
        <img src="" class="avatar" alt="" data-role="user-avatar">
      </div>

      <div class="col">
        <div class="message-content">
          <p class="mb-1" data-role="message-text"></p>

          <div class="text-right">
            <small data-role="message-date"></small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
